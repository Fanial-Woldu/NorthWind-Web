<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #405d27;
        }

        .container {
            margin-top: 50px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-back, .btn-refresh, .btn-insert {
            text-align: center;
        }

        .btn-custom {
            background-color: #405d27;
            border-color: #405d27;
        }

            .btn-custom:hover {
                background-color: #405d27;
                border-color: #405d27;
            }

        .table {
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table th {
                background-color: Green;
                color: #fff;
            }

            .table th, .table td {
                border: 1px solid #dee2e6;
            }

            .table th, .table td {
                padding: 15px;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Back button -->
        <div class="text-right btn-back">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Homepage</a>
        </div>

        <!-- Insert Customer button -->
        <div class="text-right btn-insert">
            <div class="text-right">
                <a href="@Url.Action("InsertACustomerForm")" class="btn btn-primary btn-custom">Insert Customer</a>
            </div>
        </div>

        <h1 class="text-center" style="color: #007bff;">Customers</h1>


        <!-- Filter form -->
        <form method="get" action="@Url.Action("GetCustomerByFilter")">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="aCustomerId">Customer ID:</label>
                        <input type="text" id="aCustomerId" name="aCustomerId" class="form-control">
                    </div>
                </div>
                <div class="col-md-2" >
                    <button type="submit" class="btn btn-primary btn-custom" style="margin-top: 32px;">Apply Filters</button>
                </div>
                <!-- Refresh Button -->
                <div class="col-md-2 btn-refresh" >
                    <a href="@Url.Action("GetCustomers")" class="btn btn-info btn-custom" style="margin-top: 32px;">Refresh</a>
                </div>
                
            </div>
        </form>

        <!-- Customer table -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Company Name</th>
                        <th>Contact Name</th>
                        <th>Contact Title</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Region</th>
                        <th>Postal Code</th>
                        <th>Country</th>
                        <th>Phone</th>
                        <th>Fax</th>
                        <th>Update Info</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Rows of customer data -->
                    @foreach (var c in ViewBag.ListOfCustomerByFilter)
                    {
                        <tr>
                            <td>@c.CustomerId</td>
                            <td>@c.CompanyName</td>
                            <td>@c.ContactName</td>
                            <td>@c.ContactTitle</td>
                            <td>@c.Address</td>
                            <td>@c.City</td>
                            <td>@c.Region</td>
                            <td>@c.PostalCode</td>
                            <td>@c.Country</td>
                            <td>@c.Phone</td>
                            <td>@c.Fax</td>
                            <td><a href="@Url.Action("UpdateACustomerForm", new { aCustomerId = c.CustomerId })" class="btn btn-warning btn-sm">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</body>


</html>