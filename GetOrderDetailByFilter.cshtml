<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Detail Management</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-back, .btn-refresh, .btn-insert {
            text-align: center;
        }

        .btn-custom {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-custom:hover {
                background-color: #138496;
                border-color: #138496;
            }

        .table {
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table th {
                background-color: #007bff;
                color: #fff;
            }

            .table th, .table td {
                border: 1px solid #dee2e6;
            }

            .table th, .table td {
                padding: 15px;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Back button -->
        <div class="text-right btn-back">

            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Homepage</a>
        </div>

        <!-- Insert Customer button -->
        <div class="text-right btn-insert">
            <div class="text-right">
                <a href="@Url.Action("InsertAnOrderDetailForm")" class="btn btn-primary btn-custom">Insert Order Detail</a>
            </div>
        </div>

        <h1 class="text-center" style="color: #007bff;">Order Details</h1>



        <!-- Filter form -->
        <form method="get" action="@Url.Action("GetOrderDetailByFilter")">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="aOrderId">Order ID:</label>
                        <input type="text" id="aOrderId" name="aOrderId" class="form-control">
                        <label for="aProductId">Product ID:</label>
                        <input type="text" id="aProductId" name="aProductId" class="form-control">
                    </div>

                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-custom" style="margin-top: 32px;">Apply Filters</button>
                </div>
                <!-- Refresh Button -->
                <div class="col-md-2 btn-refresh">
                    <a href="@Url.Action("GetOrderDetails")" class="btn btn-info btn-custom" style="margin-top: 32px;">Refresh</a>
                </div>

            </div>
        </form>

        <!-- Customer table -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <!-- Table headers -->
                <thead>
                    <tr>
                        <th>OrderId</th>
                        <th>ProductId</th>
                        <th>UnitPrice</th>
                        <th>Quantity</th>
                        <th>Discount</th>
                        <th>Update Info</th>
                    </tr>
                </thead>
                <!-- Table body -->
                <tbody>
                    <!-- Rows of order detail data -->
                    @foreach (var od in ViewBag.ListOfOrderDetailsByFilter)
                    {
                        <tr>
                            <td>@od.OrderId</td>
                            <td>@od.ProductId</td>
                            <td>@od.UnitPrice</td>
                            <td>@od.Quantity</td>
                            <td>@od.Discount</td>
                            <td><a href="@Url.Action("UpdateAnOrderDetailForm", new { aOrderId = od.OrderId })" class="btn btn-warning btn-sm">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            < script src = "site.js" ></script >
        </div>
    </div>
</body>

</html>